@model TaskList.MVC.ViewModels.TaskViewModel

@{
    ViewBag.Title = "Excluir";
}

<h2>Excluir task</h2>

<h3>Tem certeza que deseja excluir esta Task?</h3>
<div>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        
        @Html.HiddenFor(model => model.TaskId)
        @Html.HiddenFor(model => model.Titulo)
        @Html.HiddenFor(model => model.Descricao)
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Concluida)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Concluida)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Titulo)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Titulo)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Descricao)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Descricao)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.DtCriacao)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.DtCriacao)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.DtEdicao)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.DtEdicao)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.DtConclusao)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.DtConclusao)
            </dd>

        </dl>


        <div class="form-actions no-color">
            <input type="button" value="Voltar" class="btn btn-default" onclick="location.href='@Url.Action("Index", "Tasks")'" />
            <input type="submit" value="Excluir" class="btn btn-danger" /> 
        </div>
    }
</div>
